<h1> Cocktail Show Page </h1>

<%= @cocktail.name %></li>
<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.association :ingredient %>
  <%= f.input :description %>
  <%= f.button :submit %>
<% end %>


<% @cocktail.doses.each do |dose| %>
<p><%= dose.ingredient.name %> - <%= dose.description %></p>
<% end %>
